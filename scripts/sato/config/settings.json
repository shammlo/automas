{
  "ui": {
    "theme": "dark",
    "opacity": 1.0,
    "always_on_top": false,
    "minimize_to_tray": false,
    "show_notifications": true,
    "sound_alerts": false,
    "auto_hide": false,
    "compact_mode": false,
    "window_width": 675,
    "window_height": 730,
    "animation_enabled": true
  },
  "monitoring": {
    "global_check_interval": 60,
    "max_response_time_warning": 3000,
    "max_response_time_critical": 8000,
    "enable_uptime_tracking": true,
    "history_retention_days": 30,
    "parallel_checks": true,
    "max_concurrent_checks": 10,
    "flap_detection_threshold": 3,
    "flap_detection_window": 300,
    "min_failure_duration": 60
  },
  "notifications": {
    "desktop_notifications": true,
    "sound_alerts": false,
    "webhook_url": null,
    "notify_on_status_change": true,
    "notify_on_slow_response": false,
    "notification_timeout": 8000,
    "enhanced_notifications": true,
    "group_similar_alerts": true,
    "alert_cooldown_seconds": 300,
    "suppress_flapping_alerts": true
  }
}